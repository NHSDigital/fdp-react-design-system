{# InsetText macro: mirrors React InsetText SSR for text/html (children not supported in macro usage) #}
{% macro insetText(params) %}
  {% set classes = 'nhsuk-inset-text' %}
  {% if params.className %}{% set classes = classes + ' ' + params.className %}{% endif %}
  <div class="{{ classes }}">
    {% if params.html %}
      <div>{{ params.html | safe }}</div>
    {% elif params.text %}
      <p>{{ params.text }}</p>
    {% endif %}
  </div>
{% endmacro %}
