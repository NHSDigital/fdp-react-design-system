{
  "name": "nhs-fdp-design-system",
  "version": "0.0.1",
  "description": "NHS Frontend Development Platform Design System - A comprehensive React component library built with design tokens",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "packages/nhs-fdp/dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:tokens && npm run build:lib",
    "build:lib": "vite build",
    "build:tokens": "npx style-dictionary build --config style-dictionary.config.js",
    "build:tokens:standard": "npx style-dictionary build --config style-dictionary.config.js",
    "build:tokens:enhanced": "node build-tokens.js",
    "build:tokens:css": "npx ts-node tools/compile-tokens.ts",
    "build:tokens:typescript": "npx style-dictionary build --config style-dictionary.config.js --platform typescript",
    "build:tokens:react": "npx style-dictionary build --config style-dictionary.config.js --platform react",
    "build:all": "npm run build:tokens:enhanced && npm run build:lib",
    "test": "vitest run --config vite.config.ts",
    "test:watch": "vitest --config vite.config.ts",
    "test:storybook": "vitest",
    "test:ui": "vitest run --threads",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=chpt_ccbfd54ca0760e9",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "keywords": [],
  "author": "Fergus Bisset",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
