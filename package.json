{
  "name": "@fergusbisset/nhs-fdp-design-system",
  "version": "0.0.1",
  "description": "NHS FDP Frontend Development Platform Design System - A comprehensive React component library built with design tokens",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "packages/nhs-fdp/dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:tokens && npm run build:lib && npm run build:types",
    "build:lib": "vite build --config config/vite.config.ts",
    "build:types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --outDir dist",
    "build:tokens": "npx style-dictionary build --config config/style-dictionary.config.js && node scripts/build-responsive-tokens.js && node scripts/add-use-directives.js",
    "build:tokens:responsive": "node scripts/build-responsive-tokens.js",
    "build:tokens:standard": "npx style-dictionary build --config config/style-dictionary.config.js",
    "build:tokens:enhanced": "node config/build-tokens.js",
    "build:tokens:css": "npx ts-node tools/compile-tokens.ts",
    "build:tokens:typescript": "npx style-dictionary build --config style-dictionary.config.js --platform typescript",
    "build:tokens:react": "npx style-dictionary build --config style-dictionary.config.js --platform react",
    "build:all": "npm run build:tokens:enhanced && npm run build:lib",
    "test": "vitest run --config config/vitest.components.config.ts",
    "test:watch": "vitest --config config/vitest.components.config.ts",
    "test:components": "vitest run --config config/vitest.components.config.ts",
    "test:ssr-components": "vitest run --config config/vitest.ssr.config.ts",
    "test:storybook": "vitest",
    "test:ui": "vitest run --threads",
    "test:coverage": "vitest run --coverage",
    "visual:setup": "npx tsx tools/visual-testing/setup.ts",
    "visual:generate": "npx tsx tools/visual-testing/generate-reference.ts",
    "visual:test": "playwright test --config=config/playwright.visual.config.ts",
    "visual:test:chunked": "npx tsx tools/run-visual-tests.ts",
    "visual:test:enhanced": "playwright test --config=config/playwright.visual.config.ts tests/visual/components-core-enhanced.test.ts",
    "visual:test:core": "playwright test --config=config/playwright.visual.config.ts tests/visual/components-core.test.ts",
    "visual:test:navigation": "playwright test --config=config/playwright.visual.config.ts tests/visual/components-navigation.test.ts",
    "visual:test:form": "playwright test --config=config/playwright.visual.config.ts tests/visual/components-form.test.ts",
    "visual:test:content": "playwright test --config=playwright.visual.config.ts tests/visual/components-content.test.ts",
    "visual:test:error": "playwright test --config=playwright.visual.config.ts tests/visual/components-error.test.ts",
    "visual:snapshots": "npx tsx tools/manage-snapshots.ts",
    "visual:test:ui": "playwright test --config=playwright.visual.config.ts --ui",
    "visual:test:headed": "playwright test --config=playwright.visual.config.ts --headed",
    "visual:update": "playwright test --config=playwright.visual.config.ts --update-snapshots",
    "visual:report": "playwright show-report tests/visual/reports/html",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=chpt_ccbfd54ca0760e9",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "analyze:ssr": "npx tsx scripts/analyze-ssr.ts",
    "analyze:ssr:verbose": "npx tsx scripts/analyze-ssr.ts ./src/components ./ssr-analysis-report",
    "test:ssr": "vitest run tests/ssr-analysis/"
  },
  "keywords": [],
  "author": "Fergus Bisset",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@playwright/test": "^1.54.1",
    "@storybook/addon-a11y": "^9.1.1",
    "@storybook/addon-docs": "^9.1.1",
    "@storybook/addon-vitest": "^9.1.1",
    "@storybook/react-vite": "^9.1.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3": "^7.4.3",
    "@types/node": "^24.1.0",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "chromatic": "^13.1.2",
    "eslint": "^9.31.0",
    "eslint-plugin-storybook": "^9.1.1",
    "glob": "^11.0.3",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "remark-gfm": "^4.0.1",
    "storybook": "^9.1.1",
    "style-dictionary": "^5.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@react-aria/button": "^3.14.0",
    "@react-aria/dnd": "^3.11.0",
    "@react-aria/focus": "^3.21.0",
    "@react-aria/grid": "^3.14.3",
    "@react-aria/interactions": "^3.25.4",
    "@react-aria/table": "^3.17.6",
    "@react-aria/tabs": "^3.10.6",
    "@react-aria/utils": "^3.30.0",
    "@react-stately/dnd": "^3.6.1",
    "@react-stately/grid": "^3.11.4",
    "@react-stately/table": "^3.14.4",
    "@react-stately/tabs": "^3.8.4",
    "@react-stately/toggle": "^3.9.0",
    "@react-types/grid": "^3.3.4",
    "@react-types/table": "^3.13.2",
    "@react-types/tabs": "^3.3.17",
    "@types/color": "^4.2.0",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "color": "^5.0.0",
    "d3": "^7.9.0",
    "react": "^19.1.0",
    "react-aria": "^3.42.0",
    "react-aria-components": "^1.11.0",
    "react-dom": "^19.1.0",
    "sass": "^1.89.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
