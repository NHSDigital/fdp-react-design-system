        "$value": "clamp(0.8125rem, 0.25vw + 0.75rem, 0.9rem)",
        "$description": "~13px → ~14.4px"
      },
      "body": {
        "$value": "clamp(1rem, 0.6vw + 0.9rem, 1.1875rem)",
        "$description": "16px → 19px"
      },
