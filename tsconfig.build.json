{
  "extends": "./config/tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "types": ["node", "vitest/globals", "@testing-library/jest-dom/vitest", "nunjucks"]
  },
  "include": [
    "src/**/*",
    "packages/nhs-fdp/dist/react/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.stories.*",
    "src/test-setup.ts",
    "src/vitest-env.d.ts",
    "**/styled-components.ts",
    "src/test-utils/**",
    "src/ssr-test-setup.ts",
    "src/utils/ssr-test-utils.ts"
  ]
}
